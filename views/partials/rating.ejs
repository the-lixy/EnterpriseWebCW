<!-- Template for the user rating system -->

<!-- script for displaying user's selected rating -->
<script>
    function function1(stars){
    
        // reset all stars to grey
        for (let i = 1; i < 6; i++) { 
        document.getElementById("demo" + String(i)).className = "fa fa-star";
        }
    
        // highlight the amount of stars
        for (let i = 1; i < stars; i++) { 
        document.getElementById("test").innerHTML = "i is: " + String(i);
        document.getElementById("demo" + String(i)).className = "fa fa-star checked";
        }
    }
    
    </script>

<p style="display:inline"> Click to leave a rating: </p>
<span class="fa fa-star" id= "demo1" onclick="function1(2)"></span>
<span class="fa fa-star" id = "demo2" onclick="function1(3)"></span>
<span class="fa fa-star" id = "demo3" onclick="function1(4)"></span>
<span class="fa fa-star" id = "demo4" onclick="function1(5)"></span>
<span class="fa fa-star" id = "demo5" onclick="function1(6)"></span> <br>

