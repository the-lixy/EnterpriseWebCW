<html lang="en">
    <head>
        <title> Babbler - Submit a Story </title>
        <%- include('../partials/imports'); %>
    </head>

    <!-- partial - navbar header -->
    <header><%- include('../partials/header'); %></header>
    
    <body>
        <div class="container">
            <h4> Submit a Story</h4>
            <form action="/submittedstory" method="POST">

                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" class="form-control" placeholder="Enter title" name="title" required>
                </div>

                <div class="form-group">
                    <label for="story">Story Text:</label>
                    <textarea class="form-control" rows="5" placeholder="Enter story here" name="story" required> </textarea>
                </div>

                <div class="form-group">
                    <label for="genre">Genre:</label>
                    <select class="form-control" name="genre">
                        <option>Adventure</option>
                        <option>Horror</option>
                        <option>Romance</option>
                        <option>Thriller</option>
                        <option>SciFi</option>
                        <option>Fantasy</option>
                        <option>Comedy</option>
                        <option>Fable</option>
                    </select>
                </div> 

                <!-- option to submit anonymously if user is logged in-->
                <% if (username) {%>
                    <label>
                        <input type="checkbox" name="anonymous" checked>
                        Submit anonymously
                      </label>
                <%} %>

                <!-- display message if user is not logged in -->
                <% if (!username) { %>

                    <p> you are not logged in. work will be submitted anonymously. </p>

                <% } %>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>

            </form>
            </div>

    </body>

</html>